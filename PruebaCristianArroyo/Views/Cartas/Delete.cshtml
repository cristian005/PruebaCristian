@model PruebaCristianArroyo.Models.Carta

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar Carta</h1>

<h3>¿Esta seguro de que desea borrar esta carta?</h3>
<div>
    <h4>Carta</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Imagen)
        </dt>
        <dd class = "col-sm-10">
            @{
                var base64 = Convert.ToBase64String(Model.Imagen);
                var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
            }
            <img src="@imgsrc" style="max-width: 100px; max-height: 100px" />
        </dd>
       
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" style="color:white; font-weight:600;" /> 
        <a class="btn btn-primary" asp-action="Index" style="color:white; font-weight:600;">Regresar a la lista</a>
    </form>
</div>
